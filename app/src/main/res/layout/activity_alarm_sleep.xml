<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zvezdnoe_nebo2"
    tools:context=".AlarmSleepActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="2dp"
                android:elevation="1dp"
                android:padding="12dp"
                android:paddingStart="14dp"
                android:src="@drawable/ic_night_sleep" />

            <TextView
                android:layout_width="340dp"
                android:layout_height="54dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/round_back_while_settings"
                android:paddingStart="84dp"
                android:paddingTop="15dp"
                android:text="Пора ложиться спать"
                android:textColor="#9575CD"
                android:textSize="17sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout13"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/alarm_sleep_background_while"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="14dp"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/recommendationButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/non_background"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="225dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/round_back_while"
                android:paddingStart="16dp"
                android:paddingTop="9dp"
                android:text="Рекомендации перед сном"
                android:textColor="#9575CD"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/recIntentButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="265dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/button_oval"
                android:padding="8dp"
                android:paddingStart="8dp"
                android:drawableStart="@drawable/ic_chevron_back_sleep"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout17"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/alarm_sleep_background_while"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_back_while"
                android:paddingStart="16dp"
                android:paddingTop="9dp"
                android:text="Музыка для сна"
                android:textColor="#9575CD"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/defaultTextView"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="65dp"
                android:background="@drawable/round_back_while"
                android:drawableRight="@drawable/ic_chevron_back_sleep"
                android:paddingStart="16dp"
                android:paddingTop="9dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="Не выбрано"
                android:textColor="#CDE8E6E6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/musicTextView"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="65dp"
                android:background="@drawable/round_back_while"
                android:drawableRight="@drawable/ic_chevron_back_sleep"
                android:paddingStart="16dp"
                android:paddingTop="9dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text=""
                android:textColor="#CDE8E6E6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="265dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_oval"
                android:padding="8dp"
                android:src="@drawable/ic_music_note"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/alarm_sleep_background_while"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonWekup"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_back_while"
                android:text="Cпать..."
                android:textColor="#CDE8E6E6"
                android:textSize="17sp"
                android:textStyle="bold|italic" />
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>