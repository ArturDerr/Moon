<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relativeLayout12"
                android:layout_width="340dp"
                android:layout_height="58dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/round_back_while"
                android:orientation="horizontal"
                android:padding="15dp"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/greetings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="0dp"
                    android:text="text"
                    android:textColor="#CD8C4EDA"
                    android:textSize="20sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout13"
                android:layout_width="340dp"
                android:layout_height="300dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_back_while"
                android:orientation="horizontal"
                android:padding="15dp"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:elevation="100dp"
                    android:translationZ="10dp"
                    android:background="@drawable/button_oval"
                    android:paddingStart="16dp"
                    android:paddingTop="9dp"
                    android:textStyle="bold"
                    android:text="Будильник"
                    android:textColor="#CDE8E6E6"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="265dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_oval"
                    android:drawableStart="@drawable/ic_alarm_settings"
                    android:elevation="100dp"
                    android:padding="8dp"
                    android:translationZ="160dp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="225dp"
                    android:background="@drawable/round_back_while_settings"
                    android:paddingStart="16dp"
                    android:paddingTop="9dp"
                    android:text="Описание: "
                    android:textColor="#48FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="240dp"
                    android:layout_marginTop="235dp"
                    android:text="Текст"
                    android:textColor="#27FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout11"
                android:layout_width="340dp"
                android:layout_height="175dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_back_while"
                android:orientation="horizontal"
                android:padding="15dp"
                tools:ignore="MissingConstraints">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout10"
                android:layout_width="340dp"
                android:layout_height="175dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_back_while"
                android:orientation="horizontal"
                android:padding="15dp"
                tools:ignore="MissingConstraints">

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>